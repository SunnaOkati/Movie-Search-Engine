<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#37383A"
    tools:context=".MovieDes">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#434345"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spacegrotesk_medium"
            android:gravity="center"
            android:padding="12dp"
            android:text="Log In"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:background="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/abc_vector_test" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#444"
        app:layout_constraintTop_toBottomOf="@+id/movReviewScore" />

    <TextView
        android:id="@+id/movTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/spacegrotesk_bold"
        android:text="Title"
        android:textColor="#FFFFFF"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/movReviewScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/spacegrotesk_bold"
        android:text="Title"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/movTitle"
        app:layout_constraintTop_toBottomOf="@+id/movTitle" />

    <TextView
        android:id="@+id/movYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/spacegrotesk_regular"
        android:text="Year"
        android:textColor="#E0E0E0"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/movTitle"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/movDirector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/spacegrotesk_regular"
        android:text="Director"
        android:textColor="#E0E0E0"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/movYear"
        app:layout_constraintTop_toBottomOf="@+id/movYear" />

    <TextView
        android:id="@+id/movCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/spacegrotesk_regular"
        android:text="Country"
        android:textColor="#E0E0E0"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/movDirector"
        app:layout_constraintTop_toBottomOf="@+id/movDirector" />

    <TextView
        android:id="@+id/movWriter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/spacegrotesk_regular"
        android:text="Writer"
        android:textColor="#E0E0E0"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/movCountry"
        app:layout_constraintTop_toBottomOf="@+id/movCountry" />

</androidx.constraintlayout.widget.ConstraintLayout>